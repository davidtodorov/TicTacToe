@using TicTacToe.Models
@model CreateGameViewModel

@{
    ViewData["Title"] = "Create a game";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group col-md-4 ">
                        <label asp-for="Visibility">Game Type</label>
                       
                        @Html.DropDownListFor(v => v.Visibility,
                            Html.GetEnumSelectList(typeof(VisibilityType)),
                            new { @class = "visibility-type form-control" })
                        <span asp-validation-for="Visibility" class="text-danger" />
                    </div>

                    <div class="form-group col-md-4 gamePassword " style="display: none;">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-default create-game-btn">Submit</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/games.js"></script>
}
