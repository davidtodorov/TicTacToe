
@{
    ViewData["Title"] = "View";
}

@model IList<GameScoresInfoOutput>
<h2 style="margin-top:65px">Scores</h2>
<table class="table table-striped" style="margin-top: 25px;">
    <thead>
    <tr>
        <th>#</th>
        <th>Username</th>
        <th>Wins</th>
        <th>Draws</th>
        <th>Loses</th>
    </tr>
    </thead>
    <tbody>

    @for (int i = 0; i < @Model.Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@Model[i].Username</td>
            <td>@Model[i].Wins</td>
            <td>@Model[i].Draws</td>
            <td>@Model[i].Loses</td>
            <td>@Model[i].Scores</td>
        </tr>
    }

    </tbody>
</table>

