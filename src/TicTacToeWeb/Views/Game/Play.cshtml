@using System.ComponentModel.DataAnnotations
@using TicTacToe.Data.Extensions
@using TicTacToe.Models
@model GameStatusViewModel
@{
    ViewData["Title"] = "Play";
}

<h2>Play</h2>
<div class="row">
    <div class="col-md-4 col-md-push-4">
        @if (Model.State != GameState.WaitingForASecondPlayer)
        {
            <h3>@(Model.CreatorUsername)[X] vs @(Model.OpponentUsername)[O]</h3>
        }
        <table class="table table-bordered table-hover cell">
            <thead >
            <tr >
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>

            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>

            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>

            </thead>
        </table>
        <h3>Status: @(Model.State.GetAttribute<DisplayAttribute>().Name)</h3>
    </div>
</div>
