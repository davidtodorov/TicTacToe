@model IList<AvailableGameInfoOutput>

<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Description</th>
        <th>Creator</th>
        <th>Created On</th>
        <th>Status</th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@Model[i].Name</td>
            <td>@Model[i].CreatorUsername</td>
            <td>@Model[i].CreationDate</td>
            <td>@Model[i].State</td>
            <td>
                <a class="btn btn-primary btn-sm" role="button"
                   asp-area="" asp-controller="Game" asp-action="Play">Play</a>
            </td>
        </tr>
    }
    </tbody>
</table>