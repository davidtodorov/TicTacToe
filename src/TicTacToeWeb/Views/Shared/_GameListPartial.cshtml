@using Microsoft.AspNet.Identity
@using Microsoft.CodeAnalysis.CSharp.Syntax
@model IList<AvailableGameInfoOutput>

<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Description</th>
        <th>Creator</th>
        <th>Created On</th>
        <th>Status</th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@Model[i].Name</td>
            <td>@Model[i].CreatorUsername</td>
            <td>@Model[i].CreationDate</td>
            <td>@Model[i].State</td>
            <td>
                @if (Model[i].CreatorUserId == User.Identity.GetUserId() || Model[i].OpponentUserId == User.Identity.GetUserId())
                {
                    <a class="btn btn-primary btn-sm" role="button"
                       asp-area="" asp-controller="Game" asp-action="Play" asp-route-id="@Model[i].Id">Play</a>
                }
                else if(Model[i].CreatorUserId != User.Identity.GetUserId())
                {
                    <a class="btn btn-primary btn-sm" role="button"
                       asp-area="" asp-controller="Game" asp-action="Join" asp-route-id="@Model[i].Id">Join</a>
                } 
            </td>
        </tr>
    }
    </tbody>
</table>