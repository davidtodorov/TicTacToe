@model UserIndexViewModel

@{
    ViewData["Title"] = "Users";
    var userList = Model.AllUsers.OrderBy(u => u.RegistrationDate).ToList();
    
}

<div class="row">
    <h2 style ="margin-top:65px">Users</h2>

    <table class="table table-striped">
        <thead>
        <tr>
            <th class="col-md-2 col-md-push-2" style="padding-left: 15px;">#</th>
            <th class="col-md-4">Username</th>
            <th class="col-md-4">Registered on</th>
        </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < userList.Count; i++)
        {
            <tr>
                <td class="col-md-2 col-md-push-2" style="padding-left: 15px;">@(i + 1)</td>
                <td class="col-md-4">@userList[i].FirstName</td>
                <td class="col-md-4 col-md-offset-2">@userList[i].RegistrationDate</td>
            </tr>
        }
        </tbody>
    </table>
</div>
